<resources>

    <style name="SimpleCardStyle">
        <item name="android:layout_marginStart">@dimen/card_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/card_margin_horizontal</item>
        <item name="android:layout_marginTop">@dimen/card_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/card_margin_vertical</item>
    </style>

    <style name="SimpleInnerCardStyle">
        <item name="android:padding">@dimen/card_padding</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="SimpleCardHeaderStyle">
    </style>

    <style name="SimpleCardHeaderTitleStyle">
        <item name="android:textSize">@dimen/card_title_text_size</item>
        <item name="android:paddingBottom">@dimen/card_title_bottom_padding</item>
        <item name="android:paddingTop">@dimen/card_title_top_padding</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginEnd">@dimen/card_title_overflow_padding</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Title</item>
    </style>

    <style name="SimpleCardHeaderOverflowStyle">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:src">@drawable/ic_overflow_black_24dp</item>
        <item name="android:padding">@dimen/card_overflow_padding</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

</resources>